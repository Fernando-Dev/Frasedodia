<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context="com.example.flavia.frasedodia.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/botaoNovaFraseId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:text="@string/texto_frase_dia1" />


        <TextView
            android:id="@+id/textoNovaFraseId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/botaoNovaFraseId"
            android:layout_marginTop="29dp"
            android:text="Frases..."
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textSize="@dimen/texto_nova_frase" />
    </LinearLayout>

</ScrollView>
